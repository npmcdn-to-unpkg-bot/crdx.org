$content_width = 700px
$sidebar_width = 200px

$tab_radius = 10px
$box_radius = 10px

$text_color = #333
$hr_color   = #aaa

$header_bg  = #bbb
$nav_bg     = #ccc
$content_bg = #e5e5e5
$code_bg    = #fafafa

$font_size = 13px

// -------------------
// font
// -------------------
@import url("http://fonts.googleapis.com/css?family=Noto+Sans:400,700,400italic,700italic")

*
    -webkit-box-sizing border-box
    -moz-box-sizing border-box
    box-sizing border-box

body
input
button
label
select
textarea
    font-family "Noto Sans"
    font-size $font_size !important // thanks, bootstrap!

body
    background-color $content_bg

// container
.content-container
.site-header
.site-nav
    max-width $content_width
    margin 0 auto

// header
.header-container
    background-color $header_bg

.site-header
    color black

    a
        display block
        padding 1em
        color black

        &:hover
            text-decoration none

        h1
            margin 0px
            font-size 40px

// navigation
.nav-container
    background-color $nav_bg

.site-nav
    ul
        margin 0px
        list-style-type none

        li
            display inline-block

            &.selected
                background-color $content_bg
                border-top-right-radius $tab_radius
                border-top-left-radius $tab_radius

            a
                padding 0.5em
                display block
                text-decoration none

                &:hover
                    text-decoration none

        &.nav-left
        &.nav-right
            i[class^=glyphicon]
                margin-right 0.5em

        &.nav-left
            float left

        &.nav-right
            float right

// content
.site-content
    background-color $content_bg
    margin 0.5em
    margin-top 1em
    padding-bottom 0px
    overflow hidden
    width auto

// sidebar
.site-sidebar
    background-color $content_bg
    float right
    width $sidebar_width
    padding 1em

    .sidebar-box
        clear left
        background-color $nav_bg
        border-radius $box_radius
        border 1px solid $header_bg
        margin-bottom 1em

        .sidebar-title
            font-weight bold
            text-align center
            border-top-left-radius $box_radius
            border-top-right-radius $box_radius
            width 100%
            background-color $header_bg

        .sidebar-content
            padding 0.5em

            ul
                margin-bottom 0px
                margin-left 0px
                list-style-type none

                li
                    margin-bottom 1em

                li:last-child
                    margin-bottom 0px

            table
                width 100%

                tr:hover
                    background-color $content_bg

                .tag-name
                    width 100%

                td a
                    display block

                td a:hover
                    text-decoration none

            form
                margin-bottom 0px

                input
                    width 100%
                    margin-bottom 0px

// blog post
.site-post
    .post-title
        margin-bottom 0px
        margin-top 0px
        line-height 1.2em

        a
            text-decoration none
            font-size 0.9em
            color $text_color

    .post-meta
        line-height 1em

    .post-content
        margin-top 1em

        a:visited
            color darken(blue, 20%)

    .post-comments
        margin-top 1em

// page-specific
.page-archive
    ul
        margin-left 0px

        li
            list-style-type none

        .day
            font-weight bold

.page-cookies
    #input
    #output
        font-family monospace

    #output
        white-space pre
        overflow auto

    textarea
    input
        width 100%
        margin-bottom 0px

.page-tags
    ul
        list-style-type none
