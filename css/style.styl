// headings
h1
h2
h3
h4
h5
h6
    font-weight 700

// bootstrap defaults are too big
h1
    font-size 31.5px

h2
    font-size 24.5px

h3
    font-size 17.5px

h4
    font-size 14px

h5
    font-size 11.9px
// we don't need h6 (for now)

h2.page-title
    margin-top 0px
    border-bottom 1px solid $header_bg

// since we're pushing each heading down a notch in
// size, revert h3 back to its default
h3
    line-height normal

// miscellaneous
hr
    margin-left 20%
    margin-right 20%
    border 1px solid $hr_color
    border-bottom 0px

// bootstrap default blue is way too common now
a
    color lighten(blue, 10%)

// silly glyphicon
i.glyphicon-stackoverflow
    background-image url("/img/so.png")
    background-position 0px 0px

pre
pre > code
    white-space pre

pre
    border 0px
    border-radius 0.5em
    padding 0.5em
    overflow auto
    word-wrap normal

pre
code
    border-radius 0.5em
    background-color $code_bg

code
    color $text_color

// bootstrap tooltip
.tooltip
    font-size 1em

    &.in
        opacity 100
        filter unquote("alpha(opacity=100)")

// responsiveness
@media only screen and (max-width: 600px)
    //.site-content {}

    .site-sidebar
        float none !important
        margin-left auto !important
        margin-right auto !important

    .site-nav
        ul
            float none !important

            li
                display block !important
                width 100% !important

                &.selected
                    border-radius 0 !important
